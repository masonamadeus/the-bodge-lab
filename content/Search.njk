<h2>Search the BodgeLab</h2>
<p>Search for pages by title or URL. Results will appear as you type.</p>

{# 1. The HTML for the search box and results #}
<style>
  #search-box {
    width: 100%;
    padding: 0.5em;
    font-size: 1.2em;
    margin-bottom: 1em;
    border-radius: 0;
    border: 1px solid var(--border-color);
  }
  #search-results ul {
    list-style: none;
    padding-left: 0;
  }
  #search-results li {
    margin-bottom: 1em;
    border-bottom: 1px dashed var(--text-muted);
    padding-bottom: 1em;
  }
  #search-results small {
    color: var(--text-muted);
  }
</style>
<div>
<input type="search" id="search-box" placeholder="Start typing to search..." autofocus>
</div>
<div id="search-results">
  <p><i>Waiting you to start typing...</i></p>
</div>

<script>
  document.addEventListener('bodgelab:searchready', () => {
    const searchInput = document.getElementById('search-box');
    const resultsContainer = document.getElementById('search-results');
    
    // Use the global debounce
    const handleInput = window.BodgeLab.debounce(async (e) => {
        const query = e.target.value;
        
        // 1. Get Data
        const results = await window.BodgeLab.getResults(query);
        
        // 2. Render Data
        window.BodgeLab.render(results, resultsContainer, query);
    }, 300);

    searchInput.addEventListener('input', handleInput);
  });
</script>