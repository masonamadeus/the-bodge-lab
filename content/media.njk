---
pagination:
  data: assets
  size: 1
  alias: media
permalink: "/media{{ media.url }}/"
eleventyExcludeFromCollections: true
---
{% extends "layout.njk" %}

{% block content %}
  <h2>{{ media.name }}</h2>

  {# --- THIS IS THE NEW CLEAN LOGIC --- #}
  {% if media.type == 'image' %}
    <p><img src="{{ media.url }}" alt="{{ media.name }}" style="max-width: 100%;"></p>

  {% elif media.type == 'video' %}
    <video controls style="max-width: 100%;">
      <source src="{{ media.url }}">
      Your browser does not support the video tag.
    </video>

  {% elif media.type == 'audio' %}
    <audio controls>
      <source src="{{ media.url }}">
      Your browser does not support the audio tag.
    </audio>
  
  {% else %}
    <p>Cannot display this file type.</p>
  {% endif %}

  <p>
    <a href="{{ media.url }}" download>Download {{ media.name }}</a>
  </p>
{% endblock %}