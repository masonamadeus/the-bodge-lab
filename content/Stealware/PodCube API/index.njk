        // Console
        function executeCommand() {
            const input = document.getElementById('consoleInput');
            const command = input.value.trim();
            if (!command) return;
            
            // Just use run() which updates the monitor
            run(command);
            
            // Also log to console output tab
            quickCommand(command, true); 
            input.value = '';
        }

        function quickCommand(command, skipRun = false) {
            if (!skipRun) run(command);
            
            try {
                const result = eval(command);
                const output = document.getElementById('consoleOutput');
                output.innerHTML = `<pre>${JSON.stringify(result, null, 2)}</pre>`;
                
                // Add to history
                const history = document.getElementById('consoleHistory');
                const historyItem = document.createElement('div');
                historyItem.className = 'history-item';
                historyItem.textContent = command;
                history.insertBefore(historyItem, history.firstChild);
                // Keep only last 10 items
                while (history.children.length > 10) {
                    history.removeChild(history.lastChild);
                }
            } catch (error) {
                document.getElementById('consoleOutput').innerHTML = `<pre style="color: #d93025; background:#fbe9e7;">Error: ${error.message}</pre>`;
            }
