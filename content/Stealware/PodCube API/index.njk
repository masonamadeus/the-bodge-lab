        function findRelated() {
            const index = parseInt(document.getElementById('relatedIndex').value);
            const limit = parseInt(document.getElementById('relatedLimit').value);
            const episode = PodCube.all[index];
            
            if (!episode) {
                alert('Episode not found at that index');
                return;
