        // Setup event listeners for player
        function setupEventListeners() {
            PodCube.on('play', updatePlayerUI);
            PodCube.on('pause', updatePlayerUI);
            PodCube.on('track', updateNowPlaying);
            PodCube.on('timeupdate', updateProgress);
            PodCube.on('track', () => {
                            // If the user is looking at the queue tab, refresh it automatically
                            if (document.getElementById('queue').classList.contains('active')) {
                                refreshQueue();
                            }
                        });
