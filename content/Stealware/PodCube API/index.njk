        // Player UI updates
        function updatePlayerUI() {
            const btn = document.getElementById('playPauseBtn');
            btn.textContent = PodCube.status.playing ? '‚è∏Ô∏è Pause' : '‚ñ∂Ô∏è Play';
        }

        function updateNowPlaying(episode) {
            if (!episode) return;
            const html = `
                <h4>${episode.title}</h4>
                <div class="episode-meta">
                    <span style="background: #e1f5fe; color: #0277bd; padding: 2px 6px; border-radius: 4px;">${episode.episodeType}</span>
                    <span style="margin: 0 5px;">‚Ä¢</span>
                    <span>${episode.timestamp}</span>
                    <span style="margin: 0 5px;">‚Ä¢</span>
                    <span>${episode.date ? episode.date.toString() : 'No Date'}</span>
                </div>
                ${episode.model ? `<div class="episode-meta"><strong>Model:</strong> ${episode.model}</div>` : ''}
                ${episode.location ? `<div class="episode-meta"><strong>Location:</strong> ${episode.location}</div>` : ''}
            `;
            
            document.getElementById('nowPlaying').innerHTML = html;
            updateStats();
        }

        function updateProgress(status) {
            const fill = document.getElementById('progressFill');
            const text = document.getElementById('progressText');
            
            fill.style.width = status.percent + '%';
            text.textContent = `${formatTime(status.time)} / ${formatTime(status.duration)}`;
            // Update status output
            document.getElementById('statusOutput').innerHTML = `<pre>${JSON.stringify(status, null, 2)}</pre>`;
        }

        function seekTo(event) {
            const bar = document.getElementById('progressBar');
            const rect = bar.getBoundingClientRect();
            const x = event.clientX - rect.left;
            const percent = x / rect.width;
            const time = percent * PodCube.status.duration;
            
            showCode(`PodCube.seek(${time.toFixed(2)})`);
            PodCube.seek(time);
        }

        function changeSpeed() {
            const speed = parseFloat(document.getElementById('speedSelect').value);
            showCode(`PodCube.setPlaybackRate(${speed})`);
            PodCube.setPlaybackRate(speed);
        }

        function changeVolume() {
            const volume = parseInt(document.getElementById('volumeSlider').value) / 100;
            // Debounce or just show it? Showing every slide event is spammy, but accurate.
            // Let's just update the label for now to avoid spamming the monitor
            PodCube.setVolume(volume);
            document.getElementById('volumeDisplay').textContent = Math.round(volume * 100) + '%';
        }

        // Quick actions
        function playLatest() {
            showCode("PodCube.play(PodCube.latest)");
            PodCube.play(PodCube.latest);
