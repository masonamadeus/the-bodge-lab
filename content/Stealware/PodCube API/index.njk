        // Search
        function performSearch() {
            const query = document.getElementById('searchInput').value;
            showCode(`PodCube.search('${query}')`);
            const results = PodCube.search(query);
            displayEpisodes(results, 'searchOutput');
        }

        // Filters
        function applyFilters() {
            const filters = {};
            const model = document.getElementById('filterModel').value;
            const origin = document.getElementById('filterOrigin').value;
            const tag = document.getElementById('filterTag').value;
            const type = document.getElementById('filterType').value;
            const yearRange = document.getElementById('filterYearGroup').value;

            if (model) filters.model = model;
            if (origin) filters.origin = origin;
            if (tag) filters.tag = tag;
            if (type) filters.episodeType = type;
            
            // Year Range Parsing
            if (yearRange) {
                const [min, max] = yearRange.split(',').map(Number);
