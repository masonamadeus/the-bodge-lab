    <script>
        // Global state
        let commandHistory = [];

        // Initialize when PodCube is ready
        window.addEventListener('PodCube:Ready', async () => {
            try {
                await PodCube.init();
                const statusEl = document.getElementById('initStatus');
                statusEl.textContent = `‚úÖ Ready (${PodCube.all.length} Episodes)`;
                statusEl.className = 'status success';
                
                updateStats();
                populateFilterDropdowns();
                setupEventListeners();
                
