                showLoreHierarchy();
            } catch (error) {
                const statusEl = document.getElementById('initStatus');
                statusEl.textContent = `‚ùå Error: ${error.message}`;
                statusEl.className = 'status error';
            }
        });

        // --- NEW CODE MONITOR HELPER ---
        function run(code) {
            // Update Monitor
            const display = document.getElementById('codeDisplay');
            const monitor = document.getElementById('codeMonitor');
            
            display.textContent = code;
            
            // Visual Flash
            monitor.classList.remove('cm-flash');
            void monitor.offsetWidth; // Force reflow
            monitor.classList.add('cm-flash');

            // Execute
            try {
                return window.eval(code);
            } catch (e) {
                console.error("Execution failed:", e);
                display.textContent = "Error: " + e.message;
            }
        }
        // Alias for template ease
        function showCode(code) {
             const display = document.getElementById('codeDisplay');
             const monitor = document.getElementById('codeMonitor');
             display.textContent = code;
             monitor.classList.remove('cm-flash');
             void monitor.offsetWidth; 
             monitor.classList.add('cm-flash');
        }

        // Tab switching
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                const tabName = button.dataset.tab;
                document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
                button.classList.add('active');
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById(tabName).classList.add('active');
            });
        });

        // Update statistics
        function updateStats() {
            const stats = [
                { label: 'Total Episodes', value: PodCube.all.length },
                { label: 'Models', value: PodCube.models.length },
                { label: 'Origins', value: PodCube.origins.length },
                { label: 'Tags', value: PodCube.tags.length },
                { label: 'Queue Length', value: PodCube.queueItems.length },
                { label: 'Queue Duration', value: formatDuration(PodCube.queueDuration) }
            ];
            document.getElementById('statsGrid').innerHTML = stats.map(s => `
                <div class="stat-card">
                    <div class="stat-value">${s.value}</div>
                    <div class="stat-label">${s.label}</div>
                </div>
            `).join('');
        }

        // Populate filter dropdowns
        function populateFilterDropdowns() {
            const modelSelect = document.getElementById('filterModel');
            const originSelect = document.getElementById('filterOrigin');
            const tagSelect = document.getElementById('filterTag');
            const yearSelect = document.getElementById('filterYearGroup'); // New Year Select

            PodCube.models.forEach(model => {
                const option = document.createElement('option');
                option.value = model;
                option.textContent = model;
                modelSelect.appendChild(option);
            });
            PodCube.origins.forEach(origin => {
                const option = document.createElement('option');
                option.value = origin;
                option.textContent = origin;
                originSelect.appendChild(option);
            });
            PodCube.tags.forEach(tag => {
                const option = document.createElement('option');
                option.value = tag;
                option.textContent = tag;
                tagSelect.appendChild(option);
            });
            
            // Populate Years
            const groups = PodCube.getYearGroups(10);
            groups.forEach(group => {
                const option = document.createElement('option');
                option.value = `${group.start},${group.end}`;
                option.textContent = group.label;
                yearSelect.appendChild(option);
            });
