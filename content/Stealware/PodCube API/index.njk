        // Queue management
        function refreshQueue() {
            const queue = PodCube.queueItems;
            const currentIndex = PodCube.queueIndex;
            
            const queueInfo = document.getElementById('queueInfo');
            queueInfo.innerHTML = `<strong>${queue.length}</strong> Tracks ‚Ä¢ <strong>${formatDuration(PodCube.queueDuration)}</strong> Remaining ‚Ä¢ Index: ${currentIndex}`;

