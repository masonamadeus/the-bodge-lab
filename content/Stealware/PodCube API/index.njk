        // Display helpers
        function displayEpisodes(episodes, containerId, baseEpisode = null) {
            const container = document.getElementById(containerId);
            if (episodes.length === 0) {
                container.innerHTML = '<div style="padding:20px; text-align:center; color:#666;">No episodes found matching criteria.</div>';
                return;
            }
            
            const html = episodes.map((ep, i) => {
                const isBase = baseEpisode && ep === baseEpisode;
                // Note: We use the inline run() syntax here so clicks are logged
                return `
                    <div class="episode-card" ${isBase ? 'style="border-left-color: #1768da; background:#f1f8ff;"' : ''}>
                        <h4>${isBase ? 'üéØ ' : ''}${ep.title}</h4>
