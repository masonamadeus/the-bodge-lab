                        ${ep.location ? `<div class="episode-meta"><strong>Location:</strong> ${ep.location}</div>` : ''}
                        ${ep.tags.length > 0 ? `<div class="episode-meta"><strong>Tags:</strong> ${ep.tags.join(', ')}</div>` : ''}
                        <div class="inline-controls">
                            <button onclick="run('PodCube.play(PodCube.all[${PodCube.getEpisodeIndex(ep)}])')">‚ñ∂Ô∏è Play</button>
                            <button onclick="run('PodCube.queue(PodCube.all[${PodCube.getEpisodeIndex(ep)}])')">‚ûï Queue</button>
