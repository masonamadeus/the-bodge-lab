        // --- HIERARCHY VISUALIZATION ---

        function showLoreHierarchy() {
            showCode("PodCube.getLoreHierarchy()");
            const hierarchy = PodCube.getLoreHierarchy();
            
            // SORT BY COUNT (Descending)
            hierarchy.models.sort((a, b) => b.count - a.count);
            hierarchy.origins.sort((a, b) => b.count - a.count);
            hierarchy.tags.sort((a, b) => b.count - a.count);

            const container = document.getElementById('loreOutput');
            
            // Render 3 columns
            container.innerHTML = `
                <div class="hierarchy-cols">
                    ${renderHierarchyColumn("MODELS", hierarchy.models, "model")}
                    ${renderHierarchyColumn("ORIGINS", hierarchy.origins, "origin")}
                    ${renderHierarchyColumn("TAGS", hierarchy.tags, "tag")}
                </div>
            `;
        }

        function renderHierarchyColumn(title, items, filterKey) {
            if (!items || items.length === 0) return `<div class="h-col"><div class="h-header">${title}</div><div class="h-item" style="text-align:center; color:#999; padding:20px;">No Data</div></div>`;
            
            const maxCount = Math.max(...items.map(i => i.count));
            
            const listHtml = items.map(item => {
                const pct = (item.count / maxCount) * 100;
                return `
                    <div class="h-item" onclick="filterByHierarchy('${filterKey}', '${item.name.replace(/'/g, "\\'")}')">
                        <div class="h-bar" style="width: ${pct}%"></div>
                        <div class="h-row">
                            <span>${item.name}</span>
                            <span class="h-count">${item.count}</span>
                        </div>
                    </div>
                `;
            }).join('');

            return `
                <div class="h-col">
                    <div class="h-header">${title} <span style="font-weight:normal; opacity:0.7">(${items.length})</span></div>
                    ${listHtml}
                </div>
            `;
        }
        
        function filterByHierarchy(key, value) {
            showCode(`// Clicking hierarchy item: ${value}`);
            document.querySelector('[data-tab="search"]').click();
            document.getElementById('filter' + key.charAt(0).toUpperCase() + key.slice(1)).value = value;
            applyFilters();
        }

        // --- CODEPOINT INSPECTOR ---

        function inspectInputCodepoints() {
            const text = document.getElementById('codepointInput').value;
            inspectCodepoints(text);
        }

        function inspectCodepoints(str) {
            if (!str) return;
            showCode(`// Inspecting codepoints for: "${str.substring(0, 10)}..."`);
            
            const container = document.getElementById('codepointOutput');
            const grid = document.getElementById('cpGrid');
            grid.innerHTML = '';
            container.style.display = 'block';

            Array.from(str).forEach(char => {
                const code = char.codePointAt(0);
                const hex = 'U+' + code.toString(16).toUpperCase();
                const dec = code.toString(10);
                
                const box = document.createElement('div');
                box.className = 'cp-box';
                box.innerHTML = `
                    <div class="cp-char">${char}</div>
                    <div class="cp-hex">${hex}</div>
                    <div class="cp-dec">${dec}</div>
                `;
                grid.appendChild(box);
            });
            
            document.querySelector('[data-tab="config"]').click();
            document.getElementById('codepointInput').value = str;
        }

        function showYearGroups() {
            const threshold = parseInt(document.getElementById('yearThreshold').value);
            showCode(`PodCube.getYearGroups(${threshold})`);
            const groups = PodCube.getYearGroups(threshold);
            document.getElementById('yearOutput').innerHTML = `<pre>${JSON.stringify(groups, null, 2)}</pre>`;
